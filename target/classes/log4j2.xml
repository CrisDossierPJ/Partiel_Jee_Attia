<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern = "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.corentin.beuchet.partiel.database.ScopedEntityManagerFactory" level="finest" additivity="true">
			<appender-ref ref="console"/>
		</Logger>
		<Logger name="com.corentin.beuchet.partiel.database.ScopedEntityManager" level="finest" additivity="true">
			<appender-ref ref="console"/>
		</Logger>
	</Loggers>
</Configuration>